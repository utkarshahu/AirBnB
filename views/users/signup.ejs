<%= layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-3 mb-3 text-center "><b>SignUp for Wanderlust</b></h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" id="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter Your Name" type="text" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Username Required</div>
            </div>
            <!-- email -->
            <div class="mb-3">
                <label for="email" id="email" class="form-label">Email</label>
                <input name="email" placeholder="Enter Your Email" type="email" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Email Required</div>
            </div>
            <!-- password -->
            <div class="mb-3">
                <label for="password" id="password" class="form-label">Password</label>
                <input name="password" placeholder="Enter Your Password" type="password" class="form-control" required>
                <div class="invalid-feedback">Password Required</div>
            </div>
            <button class="btn btn-success offset-5">SignUp</button>
        </form>
    </div>
</div>